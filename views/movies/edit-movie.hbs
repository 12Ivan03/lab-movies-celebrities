<h1>edit movie</h1>

<form action="/movies/edit/{{movie._id}}" method="post">

    <label for="title">Movie title</label>
    <input type="text" id="title" name="title" value="{{movie.title}}">
    <label for="genre">Genre</label>
    <input type="text" id="genre" name="genre" value="{{movie.genre}}">
    <label for="plot">Plot</label>
    <input type="text" id="plot" name="plot" value="{{movie.plot}}">

    <label for="cast">Celebrities</label>
    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
            <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

    <br>
    <button type="submit">Edit</button>
</form>

<h1  class="text-of-all">Crete Movies</h1>

<form action="/movies/create" method="post" class="form-details">

    <label for="title">Movie title:
        <input type="text" id="title" name="title" class="input-box">
    </label>

    <label for="genre">Genre:
        <input type="text" id="genre" name="genre" class="input-box">
    </label>

    <label for="plot">Plot:
        <textarea name="plot" id="plot" cols="30" rows="4" class="input-box"></textarea>
    </label>

    <label for="cast">Choose celebrities:</label>
    
    <select name="cast" id="cast" class="input-box" multiple>
        <option value=""></option>
        {{#each dbCelebrities}}
            <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

    <button type="submit" class="celebrities-btn">Sunbmit</button>
</form>
